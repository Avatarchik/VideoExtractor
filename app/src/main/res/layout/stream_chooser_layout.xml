<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton"
                android:numStars="1" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
                android:checked="false" android:enabled="true" android:textOff="Not fav" android:textOn="Fav"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/videoName"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/toggleButton"/>
    </RelativeLayout>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quality_chooser"
            android:layout_gravity="center_horizontal"
            android:spinnerMode="dialog"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get video"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"/>
</LinearLayout>

